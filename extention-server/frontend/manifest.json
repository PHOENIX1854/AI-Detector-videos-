{
  "manifest_version": 3,
  "name": "AI Detector (Overlay)",
  "version": "1.3",
  "description": "Checks a video URL for AI content and shows an overlay.",

  "action": {
    "default_title": "AI Detector (Runs Automatically)"
  },
  
  "permissions": [
    "activeTab",
    "scripting"
  ],
  
  "host_permissions": [
    "http://127.0.0.1:5000/*"
  ],

  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/watch?*",
        "https://www.youtube.com/shorts/*",
        "https://www.instagram.com/reel/*",
        "https://www.instagram.com/reels/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ]
    }
  ]
}